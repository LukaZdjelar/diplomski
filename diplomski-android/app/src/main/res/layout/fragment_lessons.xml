<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.diplomski_android.MainViewModel" />
        <variable
            name="lessonsFragment"
            type="com.example.diplomski_android.ui.fragment.LessonsFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.LessonsFragment">

        <TextView
            android:id="@+id/tvLessonsChapterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chapter name"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLessons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvLessonsChapterName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
