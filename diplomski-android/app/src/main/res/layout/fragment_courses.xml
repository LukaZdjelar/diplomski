<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.diplomski_android.viewmodel.MainViewModel" />
        <variable
            name="coursesFragment"
            type="com.example.diplomski_android.fragments.CoursesFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.CoursesFragment">

        <TextView
            android:id="@+id/courses_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Courses fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/courses_chapters_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course 1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courses_textview"
            android:onClick="@{()->coursesFragment.onCourseSelection(@string/one)}"/>

        <Button
            android:id="@+id/courses_chapters_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->coursesFragment.onCourseSelection(@string/two)}"
            android:text="Course 2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courses_chapters_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
